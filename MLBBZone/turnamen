    function updateSchedule() {
      const week = document.getElementById("weekSelector").value;
      const table = document.getElementById("scheduleTable");
      table.innerHTML = "";

      const data = schedules[week];
      if (data.length === 0) {
        table.innerHTML = `<tr><td colspan="4">Belum ada data untuk minggu ini.</td></tr>`;
        return;
      }

      data.forEach(row => {
        const tr = document.createElement("tr");
        row.forEach(cell => {
          const td = document.createElement("td");
          td.textContent = cell;
          tr.appendChild(td);
        });
        table.appendChild(tr);
      });
    }

    // Load default Week 1
    updateSchedule();
  </script>

